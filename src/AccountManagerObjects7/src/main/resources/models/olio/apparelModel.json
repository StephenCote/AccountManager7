{
	"name": "olio.apparel",
	"likeInherits": ["data.directory"],
	"inherits": [
		"common.name",
		"common.description",
		"common.groupExt",
		"common.ownerId",
		"common.objectId",
		"system.organizationExt",
		"common.populate",
		"system.primaryKey"
	],
	"group": "Apparel",
	"icon": "category",
	"label": "Apparel",
	"query": ["id", "groupId", "name"],
	"dedicatedParticipation": true,
	"fields": [
		{
			"name": "type",
			"type": "string",
			"description": "The type this apparel is supposed to represent, such as a suit, casual outfit, etc"
		},
		{
			"name": "gender",
			"type": "string",
			"maxLength": 6,
			"description": "Male, female, unisex"
		},
		{
			"name": "designer",
			"type": "model",
			"baseModel": "olio.charPerson",
			"foreign": true,
			"followReference": false
		},
		{
			"name": "manufacturer",
			"type": "string",
			"maxLength": 127
		},
		{
			"name": "wearables",
			"type": "list",
			"baseType": "model",
			"baseModel": "olio.wearable",
			"foreign": true
		},
		{
			"name": "inuse",
			"type": "boolean"
		}
	]
}