{
	"schema": "olio.llm.promptTemplate",
	"name": "RPG Template",
	"description": "Full RPG/roleplay template with episodes, NLP, scenes, and memory support",
	"templateVersion": 1,
	"role": "system",
	"sectionOrder": ["intro", "character", "episode", "memory", "rules", "scene"],
	"sections": [
		{
			"sectionName": "intro",
			"role": "system",
			"lines": [
				"This is a fully immersive${episodic} ${rating}/${ratingMpa}-rated role-playing conversation/game."
			],
			"priority": 10
		},
		{
			"sectionName": "character",
			"role": "system",
			"lines": [
				"You (the LLM) control ${system.fullName}. ${system.race} ${system.characterDesc}"
			],
			"priority": 20
		},
		{
			"sectionName": "episode",
			"role": "system",
			"condition": "episodes.size>0",
			"lines": [
				"${episode}"
			],
			"priority": 30
		},
		{
			"sectionName": "memory",
			"role": "system",
			"condition": "memoryBudget",
			"lines": [
				"${memory.context}"
			],
			"priority": 35
		},
		{
			"sectionName": "rules",
			"role": "system",
			"lines": [
				"RULES:",
				"${dynamicRules}"
			],
			"priority": 40
		},
		{
			"sectionName": "scene",
			"role": "system",
			"lines": [
				"${scene.auto}"
			],
			"priority": 50
		},
		{
			"sectionName": "userIntro",
			"role": "user",
			"lines": [
				"My name is ${user.firstName}. ${user.fullName}. I am a ${user.asg}. ${user.race}",
				"Here is some information about me: ${user.characterDescPublic}"
			],
			"priority": 10
		},
		{
			"sectionName": "userReminder",
			"role": "user",
			"lines": [
				"${episodeReminder}",
				"${nlpReminder}"
			],
			"priority": 20
		},
		{
			"sectionName": "assistantIntro",
			"role": "assistant",
			"lines": [
				"My name is ${system.firstName}, and I am a ${system.asg}.",
				"${system.race}",
				"${assistCensorWarn}",
				"${nlpWarn}",
				"${firstSecondWho}",
				"${episodeAssist}"
			],
			"priority": 10
		}
	]
}
