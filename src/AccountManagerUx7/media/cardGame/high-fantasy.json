{
  "themeId": "high-fantasy",
  "name": "High Fantasy",
  "version": "1.0",
  "description": "Classic high fantasy setting with vibrant magic, diverse races, and epic adventures",

  "artStyle": {
    "promptSuffix": "high fantasy, vibrant colors, detailed illustration, epic, magical atmosphere",
    "cardBorderStyle": "ornate-gold",
    "cardBackVariant": "enchanted",
    "fontFamily": "Segoe UI, system-ui, sans-serif",
    "colorPalette": {
      "character": "#B8860B",
      "apparel": "#808080",
      "item": "#2E7D32",
      "action": "#C62828",
      "talk": "#1565C0",
      "encounter": "#6A1B9A",
      "skill": "#E65100",
      "magic": "#00695C"
    },
    "backgroundPrompt": "Fantasy landscape, rolling green hills, ancient stone castle in the distance, dramatic sky with golden clouds, mystical forest edge, high fantasy world, vibrant colors, epic panoramic view",
    "backgroundConfig": {
      "width": 1024, "height": 1024, "steps": 40, "cfg": 7, "hires": true
    },
    "sdConfig": {
      "default":   { "style": "art", "steps": 30, "cfg": 7, "width": 512, "height": 512, "denoisingStrength": 0.7 },
      "character":  { "width": 768, "height": 1024 },
      "apparel":    { "width": 512, "height": 768 },
      "item":       { "width": 512, "height": 512 },
      "action":     { "width": 768, "height": 512, "denoisingStrength": 0.8 },
      "talk":       { "width": 768, "height": 512, "denoisingStrength": 0.8 },
      "encounter":  { "width": 768, "height": 768 },
      "skill":      { "width": 512, "height": 512 },
      "magic":      { "width": 512, "height": 512, "denoisingStrength": 0.75 }
    }
  },

  "characterBuild": {
    "statRange": [3, 18],
    "statPointBuy": 72,
    "skillSlots": 4,
    "equipSlots": ["head", "body", "handL", "handR", "feet", "ring", "back"],
    "availableRaces": ["HUMAN", "ELF", "DWARF", "ORC", "HALFLING"],
    "availableAlignments": "all"
  },

  "starterDeck": {
    "apparel": { "min": 2, "max": 3, "rarity": "COMMON" },
    "weapons": { "min": 1, "max": 2, "rarity": "COMMON" },
    "consumables": [
      { "name": "Ration", "count": 2 },
      { "name": "Health Potion", "count": 1 },
      { "name": "Bandage", "count": 1 },
      { "name": "Torch", "count": 1 }
    ],
    "skills": { "min": 1, "max": 2 },
    "magicEffects": { "min": 0, "max": 1, "condition": "MAG >= 10 OR INT >= 12" }
  },

  "encounterDeck": {
    "threats": { "count": 12, "difficultyRange": [4, 10], "maxRarity": "RARE" },
    "events": { "count": 10, "maxRarity": "UNCOMMON" },
    "discoveries": { "count": 10, "maxRarity": "RARE" },
    "npcs": { "count": 8, "maxRarity": "RARE", "source": "olio.charPerson.population", "roleAssignment": "random" },
    "lootItems": { "count": 10, "rarityWeights": { "COMMON": 50, "UNCOMMON": 35, "RARE": 15 } },
    "skillCards": { "count": 5, "minRarity": "UNCOMMON", "maxRarity": "RARE" },
    "magicEffects": { "count": 2, "rarity": "RARE" }
  },

  "treasureVault": {
    "bossThreats": { "count": 4, "difficultyRange": [12, 16], "minRarity": "EPIC" },
    "legendaryWeapons": { "count": 2, "rarity": "LEGENDARY" },
    "epicWeapons": { "count": 3, "rarity": "EPIC" },
    "epicApparel": { "count": 3, "rarity": "EPIC" },
    "epicConsumables": { "count": 2, "rarity": "EPIC" },
    "epicSkills": { "count": 3, "minRarity": "RARE", "maxRarity": "EPIC" },
    "legendaryMagic": { "count": 2, "rarity": "LEGENDARY" },
    "drawTriggers": ["discovery_rare", "investigate_crit", "npc_quest_reward", "pot_jackpot_5plus"],
    "bossDefeatGrantsExtraDraw": true,
    "refillsOnCampaignSession": true
  },

  "balance": {
    "hpMax": 20,
    "moraleMax": 20,
    "energyFormula": "MAG or INT (by skill type)",
    "apFormula": "floor(END / 5) + 1",
    "apRange": [1, 5],
    "initiativeFormula": "1d20 + AGI",
    "potAnteRequired": true,
    "roundTimerSeconds": 60,
    "positionTimerSeconds": 15,
    "lazyBonesEnabled": true,
    "lethargyEnabled": true,
    "exhaustedEnabled": true,
    "hoardingReturnTarget": "encounterDeck"
  },

  "magicConfig": {
    "enabledSkillTypes": ["Imperial", "Undead", "Psionic"],
    "magicEffectPool": ["Fireball", "Ice Wall", "Mind Read", "Raise Thrall", "Healing Light", "Thunder Strike", "Shield of Faith", "Shadow Step"]
  }
